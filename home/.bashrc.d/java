# Java
if [[ -d /usr/lib/jvm/j2sdk1.7-oracle ]]; then
  export JAVA_HOME=/usr/lib/jvm/j2sdk1.7-oracle
else
  export JAVA_HOME=/usr/lib/jvm/java-7-openjdk-amd64
fi
export JDK_HOME=${JAVA_HOME}

# see: https://awesome.naquadah.org/wiki/Problems_with_Java
export _JAVA_AWT_WM_NONREPARENTING=1

# mainly to fix eclipse, but really any SWT Java app
# https://bugs.launchpad.net/ubuntu/+source/eclipse/+bug/460269
#export GDK_NATIVE_WINDOWS=true


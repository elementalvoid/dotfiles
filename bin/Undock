#!/bin/bash
displays=$(xrandr --listmonitors)
if echo ${displays} | grep -q HDMI2 &> /dev/null; then
  xrandr --output HDMI2 --off
  xrandr --output eDP1 --mode 2560x1440 --pos 0x0 --primary
else
  xrandr --output DP2-1 --off
  xrandr --output eDP1 --mode 2560x1440 --pos 0x0 --primary
fi

#~/.fehbg &
